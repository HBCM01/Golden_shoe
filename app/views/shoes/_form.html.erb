
<%= simple_form_for @shoe do |f| %>
  <%= f.input :name %>
  <%= f.input :brand %>
  <%= f.input :description %>
  <%= f.input :colour %>
  <%= f.input :material %>
  <%= f.input :size %>
  <%= f.input :category %>
  <%= f.input :department %>
  <%= f.input :price %>
  <%= f.input :stock_level %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>








