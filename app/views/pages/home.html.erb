
<div class="super_container">
<%= render 'banner' %>
    <div style="background-color: orange; margin-bottom: 16px:">
   <div class="topnav" style="text-align: center;">
    <%= link_to "Womens", shoes_path(:department=>"Women's") %>
    <%= link_to "Mens", shoes_path(:department=>"Mens") %>
    <%= link_to "Kids", shoes_path(:department=>"Kids") %>
    <%= link_to "Trainers", shoes_path(:category=>"Trainers") %>
    <%= link_to "Boots", shoes_path(:category=>"Boots") %>
  </div>
</div>

  <div class="row">
    <div class="col">
      <div class="flex-direction: row" style="justify-content: flex-start; margin: 16px;">
          <%= image_tag("back2school.jpg", size: '600x600') %>
          <span style ="display: flex; position: absolute; top: 80px; width: inherit;">
            <p style="background-color: orange; color: black; width: 25vw;  font-size: 24px; margin-left: 16px; padding: 4px">
             <strong><%= link_to "Back to school", shoes_path(:category=>"Back to school") %></p></span>
          <div>
        </div>
      </div>
    </div>
      <div class="col">
        <div class="flex-direction: row" style=" justify-content: flex-start; margin: 16px;">
           <%= image_tag("drmarten.jpg", size: '600x600') %>
           <span style ="display: flex; position: absolute; top: 80px; ">
           <p style="background-color: orange; color: black; width: 25vw;  font-size: 24px; padding: 4px">
             <strong><%= link_to "Dr Martens", shoes_path(:brand=>"Dr Martens") %></p></strong>
          <div>
          <!--   <h2>Back to School</h2> -->
          </div>
        </div>
      </div>
  </div>
</div>

<h2 style="text-align: center; margin-top: 16px;"> New Arrivals</h2>
  <div class="row">
    <% Shoe.all.order(id: :desc).limit(3).each do  |s|%>
      <div class="col">
        <div class="flex-direction: row" style="justify-content: center;">

          <div class="card m-1" style="width: 18rem; border: none;">
            <%= link_to shoe_path(s) do %>
            <%= cl_image_tag s.photos.first.key, dpr: 2.0, class:"card-img-top mb-3"%>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

<div>
<h2 style="text-align: center; margin: 16px;">You may also like...</h2>

<div class="top-content">
    <div class="container-fluid">
        <div id="carousel-example" class="carousel slide" data-ride="carousel">

            <div class="carousel-inner row w-100 mx-auto" role="listbox">
                <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3 active">
                    <%= cl_image_tag @shoes.find_by_id(2).photos.first.key, crop: :scale, class:"card-img-top mb-3"%>
                </div>
                <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3">
                    <%= cl_image_tag @shoes.find_by_id(2).photos.first.key, crop: :scale, class:"card-img-top mb-3"%>
                </div>
                <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3">
                    <%= cl_image_tag @shoes.find_by_id(3).photos.first.key, crop: :scale, class:"card-img-top mb-3"%>
                </div>
                <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3">
                    <%= cl_image_tag @shoes.find_by_id(4).photos.first.key, crop: :scale, class:"card-img-top mb-3"%>
                </div>
                <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3">
                    <%= cl_image_tag @shoes.find_by_id(5).photos.first.key, crop: :scale, class:"card-img-top mb-3"%>
                </div>
                <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3">
                    <%= cl_image_tag @shoes.find_by_id(6).photos.first.key, crop: :scale, class:"card-img-top mb-3"%>
                </div>
                <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3">
                    <%= cl_image_tag @shoes.find_by_id(7).photos.first.key, crop: :scale, class:"card-img-top mb-3"%>
                </div>
                <div class="carousel-item col-12 col-sm-6 col-md-4 col-lg-3">
                    <%= cl_image_tag @shoes.find_by_id(8).photos.first.key, crop: :scale, class:"card-img-top mb-3"%>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carousel-example" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carousel-example" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true" style="color: orange"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>
















