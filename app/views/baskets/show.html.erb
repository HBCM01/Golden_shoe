

<div class="btn btn-dark rounded-pill py-2  m-4"><%= link_to 'Keep shopping', shoes_path, {style: 'color:#FFFFFF;'} %></div>

<div class="container">
  <%= render 'form' %>
</div>


<div class="pb-5">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 p-5 bg-white rounded shadow-sm mb-5">

          <!-- Shopping cart table -->
          <div class="table-responsive">
            <table class="table">
              <thead style="background-color: orange;">
                <tr>
                  <th scope="col" class="border-0 bg-light">
                    <div class="p-2 px-3 text-uppercase">Product</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Price</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Quantity</div>
                  </th>
                  <th scope="col" class="border-0 bg-light">
                    <div class="py-2 text-uppercase">Remove</div>
                  </th>
                </tr>
              </thead>
              <tbody>
                <%= render(@basket.basket_items) %>
                  <td class="border-0 align-middle"><strong><%= link_to "Empty basket", @basket, method: :delete, data: { confirm: "Are you sure you want to empty this cart?"} %></strong><td>
              </tbody>
            </table>
          </div>
          <!-- End -->
        </div>
      </div>


      <div class="row py-5 p-4 bg-white rounded shadow-sm">
        <div class="col-lg-6">
          <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Coupon code</div>
          <div class="p-4">
            <p class="font-italic mb-4">If you have a coupon code, please enter it in the box below</p>
            <div class="input-group mb-4 border rounded-pill p-2">
              <input type="text" placeholder="Apply coupon" aria-describedby="button-addon3" class="form-control border-0">
              <div class="input-group-append border-0">
                <%= form_tag edit_basket_path(@basket) do %>
                <%= text_field_tag(:coupon) %>
                <%= submit_tag("Process")%>
                <%  %>
              <% end %>
                <%= button_to "Apply coupon",  edit_basket_path(@basket), method: :get, class: "btn btn-dark px-4 rounded-pill"%>
                <!-- <button id="button-addon3" type="button" class="btn btn-dark px-4 rounded-pill"><i class="fa fa-gift mr-2"></i>Apply coupon</button> -->
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-6">
          <div class="bg-light rounded-pill px-4 py-3 text-uppercase font-weight-bold">Order summary </div>
          <div class="p-4">
            <p class="font-italic mb-4">Shipping and additional costs are calculated based on values you have entered.</p>
            <ul class="list-unstyled mb-4">
              <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Order Subtotal </strong><strong>£ <%= @basket.total_price %></strong></li>
              <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Shipping and handling</strong><strong>£5.00</strong></li>
              <li class="d-flex justify-content-between py-3 border-bottom"><strong class="text-muted">Total</strong>
                <h5 class="font-weight-bold">£ <%= @basket.total_price + 5 %></h5>
              </li>
            </ul><span class="btn btn-dark rounded-pill py-2 btn-block"><%= link_to 'Pay now' ,  new_basket_charge_path(@basket), {style: 'color:#FFFFFF;'}  %></span>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
